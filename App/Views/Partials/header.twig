<header class="bg-gradient-to-r from-gray-900 to-black shadow-lg py-4 px-6 flex flex-wrap justify-between items-center">
    <div class="flex items-center space-x-4">
        {# Logo #}
        <div class="relative w-10 h-10 bg-gradient-to-tr from-orange-500 to-pink-500 rounded-xl rotate-45 shadow-xl hover:rotate-[225deg] transition-all duration-700 cursor-pointer group">
            <div class="absolute inset-0.5 bg-gray-900 rounded-lg flex items-center justify-center -rotate-45 group-hover:rotate-[-225deg] transition-all duration-700">
                <span class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-pink-500 group-hover:from-pink-500 group-hover:to-orange-500">EB</span>
            </div>
        </div>
        <h1 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-pink-500">EventBrite</h1>
    </div>

    {# Navigation #}
    <nav class="hidden md:flex items-center space-x-6">
        {% for item in ['Home', 'Events', 'Contact'] %}
            <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300 relative group">
                {{ item }}
                <span class="absolute left-0 bottom-0 w-full h-0.5 bg-orange-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
            </a>
        {% endfor %}
    </nav>

    {# User actions #}
    <div class="flex items-center space-x-4">
        {% if user is defined and user.user_id %}
            <span class="text-gray-300">Welcome, {{ user.user_email }}</span>
            <a href="/logout"
               class="bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white py-2 px-4 rounded-lg transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                Logout
            </a>
        {% else %}
            <a href="/login"
               class="bg-gradient-to-r from-gray-700 to-gray-600 hover:from-gray-600 hover:to-gray-500 text-white py-2 px-4 rounded-lg transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
                Login
            </a>
            <a href="/signup"
               class="bg-gradient-to-r from-orange-500 to-pink-500 hover:from-orange-600 hover:to-pink-600 text-white py-2 px-4 rounded-lg transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-opacity-50">
                Sign Up
            </a>
        {% endif %}
    </div>

    {# Mobile menu button #}
    <button class="md:hidden bg-gray-800 p-2 rounded-lg text-gray-300 hover:text-white focus:outline-none focus:ring-2 focus:ring-orange-500" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
    </button>

    {# Mobile menu #}
    <div class="hidden w-full md:hidden mt-4" id="mobile-menu">
        <nav class="flex flex-col space-y-4">
            {% for item in ['Home', 'Events', 'Contact'] %}
                <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300">{{ item }}</a>
            {% endfor %}
        </nav>
    </div>
</header>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });
</script>