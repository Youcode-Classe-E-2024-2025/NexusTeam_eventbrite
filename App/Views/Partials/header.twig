<header class="bg-gray-900 shadow-md py-4 px-6 flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-white">EventBrite</h1>
    <nav class="flex items-center space-x-6">
        <a href="#" class="text-gray-300 hover:text-white transition">Home</a>
        <a href="#" class="text-gray-300 hover:text-white transition">Events</a>
        <a href="#" class="text-gray-300 hover:text-white transition">Contact</a>
    </nav>

    <div class="flex items-center space-x-4">
        {% if user is defined and user.user_id %}
            <span class="text-gray-300">Welcome, {{ user.user_email }}</span>
            <a href="/logout"
               class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-lg transition duration-200">
                Logout
            </a>
        {% else %}
            <a href="/login"
               class="bg-gray-700 hover:bg-gray-600 text-white py-2 px-4 rounded-lg transition duration-200">
                Login
            </a>
            <a href="/signup"
               class="bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-lg transition duration-200">
                Sign Up
            </a>
        {% endif %}
    </div>
</header>
