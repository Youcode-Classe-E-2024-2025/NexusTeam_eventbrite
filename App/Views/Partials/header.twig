<header class="bg-gray-900 shadow-md py-4 px-6 flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-white">EventBrite</h1>
    <nav class="flex items-center space-x-6">
        <a href="#" class="text-gray-300 hover:text-white transition">Home</a>
        <a href="#" class="text-gray-300 hover:text-white transition">Events</a>
        <a href="#" class="text-gray-300 hover:text-white transition">Contact</a>
    </nav>

    <div class="flex items-center space-x-4">
        {% if user is defined and user %}
            <span class="text-gray-300">Welcome, {{ user.fullName }}</span>
            <div class="flex items-center space-x-2 gap-3">
                <a href="/avatar" class="text-gray-300 hover:text-white">
                    {% if user.avatar %}
                    <img src="{{ 'app/uploads/' ~ user.avatar }}" alt="Avatar" class="w-8 h-8 rounded-full">
                    {% else %}
                        <!-- IcÃ´ne de profil si l'utilisateur n'a pas d'avatar -->
                        <i class="fa fa-user-circle text-2xl"></i>
                    {% endif %}
                </a>
                <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-lg transition duration-200">
                    Logout
                </a>
            </div>
        {% else %}
            <a href="/login" class="bg-gray-700 hover:bg-gray-600 text-white py-2 px-4 rounded-lg transition duration-200">
                Login
            </a>
            <a href="/signup" class="bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-lg transition duration-200">
                Sign Up
            </a>
        {% endif %}
    </div>
</header>
