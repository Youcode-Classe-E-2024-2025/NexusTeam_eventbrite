{# Views/Admin/usersIndex.twig #}
{% extends "base.twig" %}

{% block title %}Users Management{% endblock %}

{% block content %}
<div class="min-h-screen bg-[#0f172a]">
    <!-- Sidebar -->
    <div class="fixed w-64 h-full bg-[#1e293b] z-30 shadow-xl border-r border-[#334155]">
        <div class="flex items-center justify-center h-16 border-b border-[#334155]">
            <h1 class="text-2xl font-bold bg-gradient-to-r from-[#60a5fa] to-[#a855f7] bg-clip-text text-transparent">
                NexusTeam
            </h1>
        </div>
        
        <nav class="mt-8">
            <div class="px-4 mb-4">
                <span class="text-xs font-semibold text-[#94a3b8] uppercase tracking-wider">Dashboard</span>
            </div>
            <a href="#" class="flex items-center px-4 py-3 text-[#f8fafc] bg-[#2d3a4f] border-l-4 border-[#60a5fa] transition-all duration-200">
                <i class="fas fa-users text-[#60a5fa]"></i>
                <span class="mx-4 font-medium">Users</span>
            </a>
            
            <a href="admin-categories.html" class="flex items-center px-4 py-3 text-[#94a3b8] hover:bg-[#2d3a4f] hover:text-[#f8fafc] transition-all duration-200">
                <i class="fas fa-th-large"></i>
                <span class="mx-4">Categories</span>
            </a>
            
            <a href="admin-tags.html" class="flex items-center px-4 py-3 text-[#94a3b8] hover:bg-[#2d3a4f] hover:text-[#f8fafc] transition-all duration-200">
                <i class="fas fa-tags"></i>
                <span class="mx-4">Tags</span>
            </a>
            
            <a href="admin-courses.html" class="flex items-center px-4 py-3 text-[#94a3b8] hover:bg-[#2d3a4f] hover:text-[#f8fafc] transition-all duration-200">
                <i class="fas fa-book"></i>
                <span class="mx-4">Courses</span>
            </a>
            
            <a href="admin-events.html" class="flex items-center px-4 py-3 text-[#94a3b8] hover:bg-[#2d3a4f] hover:text-[#f8fafc] transition-all duration-200">
                <i class="fas fa-calendar-alt"></i>
                <span class="mx-4">Events</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="ml-64">
        <main class="p-8">
            <!-- Statistics Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Total Users -->
                <div class="bg-[#1e293b] rounded-xl p-6 border border-[#334155] shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-[#94a3b8] text-sm mb-1">Total Users</p>
                            <h3 class="text-3xl font-bold text-[#f8fafc]">{{ users|length }}</h3>
                            <p class="text-[#60a5fa] text-sm mt-2">
                                <i class="fas fa-arrow-up mr-1"></i> 12% increase
                            </p>
                        </div>
                        <div class="p-4 bg-[#60a5fa]/10 rounded-lg">
                            <i class="fas fa-users text-[#60a5fa] text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Active Users -->
                <div class="bg-[#1e293b] rounded-xl p-6 border border-[#334155] shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-[#94a3b8] text-sm mb-1">Active Users</p>
                            <h3 class="text-3xl font-bold text-[#f8fafc]">{{ users|filter(user => user.status == 'active')|length }}</h3>
                            <p class="text-[#10b981] text-sm mt-2">
                                <i class="fas fa-arrow-up mr-1"></i> 8% increase
                            </p>
                        </div>
                        <div class="p-4 bg-[#10b981]/10 rounded-lg">
                            <i class="fas fa-user-check text-[#10b981] text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Admin Users -->
                <div class="bg-[#1e293b] rounded-xl p-6 border border-[#334155] shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-[#94a3b8] text-sm mb-1">Admins</p>
                            <h3 class="text-3xl font-bold text-[#f8fafc]">{{ users|filter(user => user.role == 'admin')|length }}</h3>
                            <p class="text-[#a855f7] text-sm mt-2">
                                <i class="fas fa-equals mr-1"></i> No change
                            </p>
                        </div>
                        <div class="p-4 bg-[#a855f7]/10 rounded-lg">
                            <i class="fas fa-user-shield text-[#a855f7] text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Banned Users -->
                <div class="bg-[#1e293b] rounded-xl p-6 border border-[#334155] shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-[#94a3b8] text-sm mb-1">Banned Users</p>
                            <h3 class="text-3xl font-bold text-[#f8fafc]">{{ users|filter(user => user.status == 'banned')|length }}</h3>
                            <p class="text-[#ef4444] text-sm mt-2">
                                <i class="fas fa-arrow-down mr-1"></i> 3% decrease
                            </p>
                        </div>
                        <div class="p-4 bg-[#ef4444]/10 rounded-lg">
                            <i class="fas fa-user-slash text-[#ef4444] text-2xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Grid -->
            <div class="bg-[#1e293b] rounded-xl shadow-xl border border-[#334155]">
                <div class="px-6 py-4 border-b border-[#334155] flex justify-between items-center">
                    <h2 class="text-xl font-semibold text-[#f8fafc]">User Management</h2>
                    <div class="flex space-x-2">
                        <button class="px-4 py-2 bg-[#2d3a4f] text-[#94a3b8] rounded-lg hover:bg-[#374151] transition-colors duration-200">
                            <i class="fas fa-filter mr-2"></i>Filter
                        </button>
                        <button class="px-4 py-2 bg-[#60a5fa] text-white rounded-lg hover:bg-[#3b82f6] transition-colors duration-200">
                            <i class="fas fa-plus mr-2"></i>Add User
                        </button>
                    </div>
                </div>

                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for user in users %}
                        <div class="bg-[#0f172a] rounded-xl shadow-lg overflow-hidden group hover:ring-2 hover:ring-[#60a5fa] transition-all duration-300">
                            <div class="p-5">
                                <div class="flex items-center justify-between mb-4">
                                    <div class="flex items-center space-x-3">
                                        <div class="bg-gradient-to-br from-[#60a5fa] to-[#a855f7] rounded-full w-12 h-12 flex items-center justify-center">
                                            <span class="text-lg font-bold text-white">{{ user.name|slice(0,1)|upper }}</span>
                                        </div>
                                        <div>
                                            <h3 class="text-lg font-medium text-[#f8fafc]">{{ user.name }}</h3>
                                            <p class="text-sm text-[#94a3b8]">{{ user.email }}</p>
                                        </div>
                                    </div>
                                    <span class="text-xs font-medium text-[#94a3b8]">#{{ user.id }}</span>
                                </div>

                                <div class="flex items-center justify-between mt-4">
                                    <span class="inline-flex items-center px-3 py-1 text-sm rounded-full 
                                        {% if user.role == 'admin' %}
                                            bg-[#a855f7]/10 text-[#a855f7]
                                        {% else %}
                                            bg-[#60a5fa]/10 text-[#60a5fa]
                                        {% endif %}
                                    ">
                                        <i class="fas {% if user.role == 'admin' %}fa-user-shield{% else %}fa-user{% endif %} mr-2"></i>
                                        {{ user.role }}
                                    </span>
                                    
                                    <span class="inline-flex items-center px-3 py-1 text-sm rounded-full 
                                        {% if user.status == 'active' %}
                                            bg-[#10b981]/10 text-[#10b981]
                                        {% else %}
                                            bg-[#ef4444]/10 text-[#ef4444]
                                        {% endif %}
                                    ">
                                        <i class="fas {% if user.status == 'active' %}fa-check-circle{% else %}fa-ban{% endif %} mr-2"></i>
                                        {{ user.status }}
                                    </span>
                                </div>

                                <div class="flex justify-end mt-6 space-x-2">
                                    {% if user.status == 'active' %}
                                    <form action="/user/ban/{{user.id}}" method="POST">
                                        <button class="p-2 rounded-lg hover:bg-[#eab308]/10 text-[#eab308] transition-all duration-200" 
                                                title="Ban User">
                                            <i class="fas fa-ban"></i>
                                        </button>
                                    </form>
                                    {% endif %}

                                    {% if user.status == 'banned' %}
                                    <form action="/user/unban/{{user.id}}" method="POST">
                                        <button class="p-2 rounded-lg hover:bg-[#10b981]/10 text-[#10b981] transition-all duration-200"
                                                title="Unban User">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    {% endif %}

                                    <form action="/user/delete/{{user.id}}" method="POST">
                                        <button class="p-2 rounded-lg hover:bg-[#ef4444]/10 text-[#ef4444] transition-all duration-200"
                                                title="Delete User">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}