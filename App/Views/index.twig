<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>حجز تذكرة</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .hidden { display: none; } /* إخفاء الفورم عند البداية */
    </style>
</head>
<body class="p-4">

    <!-- زر الحجز -->
    <button class="btn btn-primary" id="showReservationForm">احجز تذكرتك الآن</button>

    <!-- نموذج الحجز (مخفي في البداية) -->
    <div id="reservationForm" class="hidden mt-4">
        <h3>🛒 حجز تذكرة</h3>
        <form>
            <div class="mb-3">
                <label for="fullName" class="form-label">الاسم الكامل</label>
                <input type="text" class="form-control" id="fullName" placeholder="أدخل اسمك">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">البريد الإلكتروني</label>
                <input type="email" class="form-control" id="email" placeholder="example@email.com">
            </div>

            <div class="mb-3">
                <label for="ticketType" class="form-label">نوع التذكرة</label>
                <select class="form-control" id="ticketType">
                    <option value="free">🎟 مجاني</option>
                    <option value="standard">💳 مدفوع</option>
                    <option value="vip">👑 VIP</option>
                    <option value="early_bird">⏳ عرض مسبق</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success">تأكيد الحجز</button>
        </form>
    </div>

    <script>
        // جلب الزر والفورم
        const showFormButton = document.getElementById("showReservationForm");
        const reservationForm = document.getElementById("reservationForm");

        // عند الضغط على الزر، يظهر النموذج
        showFormButton.addEventListener("click", function () {
            reservationForm.classList.toggle("hidden"); // إظهار/إخفاء الفورم
        });
    </script>

</body>
</html>
