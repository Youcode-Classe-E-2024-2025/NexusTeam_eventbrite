{# Views/Category/index.twig #}
{% extends "base.twig" %}

{% block title %}Category{% endblock %}

{% block content %}
    <div class="fixed flex flex-col top-0 left-0 w-64 bg-gray-900 h-full border-r border-gray-700 text-gray-200">
        <div class="flex items-center justify-center h-14 border-b border-gray-700">
            <div class="text-2xl font-bold text-primary-400">Youdemy Admin</div>
        </div>
        <div class="overflow-y-auto overflow-x-hidden flex-grow">
            <ul class="flex flex-col py-4 space-y-1">
                <li class="px-5">
                    <div class="flex flex-row items-center h-8">
                        <div class="text-sm font-light tracking-wide text-gray-400">Menu</div>
                    </div>
                </li>
                <li>
                    <a href="../../../index.php"
                       class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-800 text-gray-300 hover:text-white border-l-4 border-transparent hover:border-primary-400 pr-6">
                    <span class="inline-flex justify-center items-center ml-4">
                        <i class="fas fa-users"></i>
                    </span>
                        <span class="ml-2 text-sm tracking-wide truncate">Users</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                       class="relative flex flex-row items-center h-11 focus:outline-none bg-gray-800 text-white border-l-4 border-primary-400 pr-6">
                    <span class="inline-flex justify-center items-center ml-4">
                        <i class="fas fa-th-large text-primary-400"></i>
                    </span>
                        <span class="ml-2 text-sm tracking-wide truncate">Categories</span>
                    </a>
                </li>
                <li>
                    <a href="../../../index.php"
                       class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-800 text-gray-300 hover:text-white border-l-4 border-transparent hover:border-primary-400 pr-6">
                    <span class="inline-flex justify-center items-center ml-4">
                        <i class="fas fa-tags"></i>
                    </span>
                        <span class="ml-2 text-sm tracking-wide truncate">Tags</span>
                    </a>
                </li>
                <li>
                    <a href="../../../index.php"
                       class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-800 text-gray-300 hover:text-white border-l-4 border-transparent hover:border-primary-400 pr-6">
                    <span class="inline-flex justify-center items-center ml-4">
                        <i class="fas fa-book"></i>
                    </span>
                        <span class="ml-2 text-sm tracking-wide truncate">Courses</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="ml-64 flex-1 min-h-screen bg-gray-800 text-gray-200">
        <header class="bg-gray-900 shadow-md py-4 px-6 flex justify-between items-center">
            <h1 class="text-2xl font-semibold">Manage Categories</h1>
            <div class="flex items-center space-x-4">
                <span>Welcome, Admin</span>
                <button class="bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-lg transition duration-200">
                    Logout
                </button>
            </div>
        </header>
        <main class="p-6">
            <div class="bg-gray-900 rounded-lg shadow-md p-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-semibold">Category List</h2>
                    <button class="bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-lg transition duration-200">
                        Add New Category
                    </button>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-gray-800 text-gray-300">
                        <thead class="bg-gray-700">
                        <tr>
                            <th class="py-3 px-4 text-left">ID</th>
                            <th class="py-3 px-4 text-left">Name</th>
                            <th class="py-3 px-4 text-left">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-700">
                        {% if categories is defined and categories|length > 0 %}
                            {% for category in categories %}
                                <tr>
                                    <td class="py-3 px-4 whitespace-nowrap">{{ category.id }}</td>
                                    <td class="py-3 px-4 whitespace-nowrap">{{ category.name }}</td>
                                    <td class="py-3 px-4 whitespace-nowrap">
                                        <a href="#" class="text-primary-400 hover:text-primary-500">Edit</a>
                                        <a href="/category" class="text-red-400 hover:text-red-500 ml-4">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="3" class="py-3 px-4 text-center">No categories available</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
