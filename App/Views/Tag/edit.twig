{# Views/Tag/edit.twig #}
{% extends "base.twig" %}

{% block title %}Edit Tag{% endblock %}

{% block content %}
    <div class="flex justify-center items-center h-full bg-gray-700 text-gray-200">
        <main class="w-full max-w-2xl p-6">
            <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-semibold mb-6">Edit Tag</h2>
                <form action="/tags/update/{{ tag.getId() }}" method="POST">
                    <div class="mb-4">
                        <label for="name" class="block text-gray-300 mb-2">Tag Name</label>
                        <input type="text" id="name" name="name" value="{{ tag.getName() }}"
                               class="w-full bg-gray-700 text-gray-200 py-2 px-4 rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500">
                    </div>

                    <div class="flex justify-end space-x-4">
                        <a href="/tags" class="bg-gray-600 hover:bg-gray-500 text-white py-2 px-4 rounded-lg transition duration-200">
                            Cancel
                        </a>
                        <button type="submit" class="bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-lg transition duration-200">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
{% endblock %}
