{# Views/home.twig #}
{% extends "base.twig" %}

{% block title %}Discover Events Near You | Eventbrite{% endblock %}

{% block content %}
    <!-- Top Banner -->
    <div class="bg-orange-50 text-orange-800 text-sm py-2">
        <div class="container mx-auto px-4 text-center">
            üéâ <span class="font-medium">New Year Special:</span> Get 20% off your first event booking with code
            <span class="font-bold">NEWYEAR24</span>
        </div>
    </div>

    <!-- Hero Section -->
    <header class="relative h-[600px] bg-cover bg-center" style="background-image: url('https://source.unsplash.com/1600x900/?festival,event');">
        <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/60">
            <div class="container mx-auto px-4 h-full flex flex-col justify-center">
                <div class="max-w-4xl">
                    <span class="text-orange-400 font-semibold mb-4 inline-block">Your next adventure awaits</span>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white leading-tight">Find experiences that make life memorable</h1>
                    <p class="text-lg md:text-xl text-gray-200 mb-8 max-w-2xl">Join millions of people discovering unique events in your area and around the world.</p>

                    <!-- Enhanced Search Bar -->
                    <div class="bg-white rounded-xl p-4 shadow-xl flex flex-col md:flex-row gap-4">
                        <div class="flex-1">
                            <label class="block text-xs font-medium text-gray-600 mb-1">Looking for</label>
                            <div class="relative">
                                <input type="text" placeholder="Search events, venues, or activities"
                                       class="w-full p-3 pl-10 border rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                                <svg class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="flex-1">
                            <label class="block text-xs font-medium text-gray-600 mb-1">Location</label>
                            <div class="relative">
                                <input type="text" placeholder="City, venue, or address"
                                       class="w-full p-3 pl-10 border rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                                <svg class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="flex-1">
                            <label class="block text-xs font-medium text-gray-600 mb-1">When</label>
                            <div class="relative">
                                <select class="w-full p-3 pl-10 border rounded-lg appearance-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                                    <option>Any date</option>
                                    <option>Today</option>
                                    <option>Tomorrow</option>
                                    <option>This weekend</option>
                                    <option>This week</option>
                                    <option>Next week</option>
                                    <option>Custom</option>
                                </select>
                                <svg class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </div>
                        </div>
                        <button class="bg-orange-600 text-white px-8 py-3 rounded-lg hover:bg-orange-700 transition font-semibold self-end">
                            Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Quick Links -->
    <div class="border-b">
        <div class="container mx-auto px-4 py-4">
            <div class="flex items-center gap-6 overflow-x-auto whitespace-nowrap pb-2">
                <span class="text-gray-600 font-medium">Popular:</span>
                {% for tag in ['This Weekend', 'Free Events', 'Music', 'Food & Drink', 'Art', 'Online Events', 'Family', 'Business'] %}
                    <a href="#" class="text-gray-600 hover:text-orange-600 transition">{{ tag }}</a>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Featured Categories -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-2 text-gray-900">Browse by Category</h2>
            <p class="text-gray-600 mb-8">Discover events that match your passions</p>

            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% set categories = [
                    {'name': 'Music', 'icon': 'üéµ', 'image': 'music,concert'},
                    {'name': 'Food & Drink', 'icon': 'üç∑', 'image': 'food,restaurant'},
                    {'name': 'Arts & Culture', 'icon': 'üé®', 'image': 'art,exhibition'},
                    {'name': 'Business', 'icon': 'üíº', 'image': 'business,conference'},
                    {'name': 'Sports & Fitness', 'icon': '‚öΩ', 'image': 'sports,fitness'},
                    {'name': 'Technology', 'icon': 'üíª', 'image': 'technology,coding'},
                    {'name': 'Wellness', 'icon': 'üßò', 'image': 'wellness,yoga'},
                    {'name': 'Comedy', 'icon': 'üé≠', 'image': 'comedy,stage'}
                ] %}

                {% for category in categories %}
                    <a href="#" class="group">
                        <div class="relative h-48 rounded-xl overflow-hidden">
                            <img src="https://source.unsplash.com/400x300/?{{ category.image }}"
                                 class="w-full h-full object-cover group-hover:scale-105 transition duration-300">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent">
                                <div class="absolute bottom-4 left-4">
                                    <span class="text-2xl mb-1 block">{{ category.icon }}</span>
                                    <h3 class="text-white font-semibold">{{ category.name }}</h3>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Trending Events -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-end mb-8">
                <div>
                    <h2 class="text-3xl font-bold mb-2 text-gray-900">Trending in London</h2>
                    <p class="text-gray-600">Don't miss out on the hottest events</p>
                </div>
                <a href="#" class="text-orange-600 hover:text-orange-700 font-semibold flex items-center gap-2">
                    View all
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {% for i in 1..8 %}
                    <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition group">
                        <div class="relative">
                            <img src="https://source.unsplash.com/400x200/?event,concert" class="w-full h-48 object-cover group-hover:scale-105 transition duration-300">
                            <div class="absolute top-4 right-4">
                                <button class="p-2 bg-white rounded-full shadow-md hover:bg-gray-100 transition">
                                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div class="p-4">
                            <div class="flex items-center gap-2 mb-3">
                                <span class="px-2.5 py-1 bg-orange-100 text-orange-800 text-xs font-medium rounded-full">Featured</span>
                                <span class="text-sm text-gray-500">In 2 days</span>
                            </div>
                            <h3 class="text-lg font-bold text-gray-800 mb-2 line-clamp-2">Summer Music Festival 2024</h3>
                            <p class="text-gray-600 text-sm mb-3">Hyde Park ‚Ä¢ London, UK</p>
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <div class="flex -space-x-2">
                                        {% for j in 1..3 %}
                                            <img class="w-6 h-6 rounded-full border-2 border-white" src="https://source.unsplash.com/50x50/?person" alt="Attendee">
                                        {% endfor %}
                                    </div>
                                    <span class="text-sm text-gray-500">+2.5k going</span>
                                </div>
                                <div class="text-right">
                                    <span class="block text-sm text-gray-500">from</span>
                                    <span class="font-bold text-gray-900">¬£75.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Online Events -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-end mb-8">
                <div>
                    <h2 class="text-3xl font-bold mb-2 text-gray-900">Online Events</h2>
                    <p class="text-gray-600">Join from anywhere in the world</p>
                </div>
                <a href="#" class="text-orange-600 hover:text-orange-700 font-semibold flex items-center gap-2">
                    Explore more
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {% for i in 1..3 %}
                    <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition group border">
                        <div class="relative">
                            <img src="https://source.unsplash.com/400x200/?webinar,online" class="w-full h-48 object-cover group-hover:scale-105 transition duration-300">
                            <div class="absolute top-4 left-4">
                                <span class="px-3 py-1 bg-blue-600 text-white text-sm font-medium rounded-full">Online</span>
                            </div>
                        </div>
                        <div class="p-4">
                            <div class="text-sm text-blue-600 font-semibold mb-2">LIVE STREAM</div>
                            <h3 class="text-lg font-bold text-gray-800 mb-2">Virtual Cooking Masterclass</h3>
                            <p class="text-gray-600 text-sm mb-3">Sunday, March 3 ‚Ä¢ 3:00 PM GMT</p>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-500">1,200+ attending</span>
                                <span class="font-semibold text-gray-900">Free</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Organizer CTA Section -->
    <section class="container mx-auto py-16 px-4">
        <div class="bg-gradient-to-r from-orange-600 to-orange-500 rounded-xl p-8 md:p-12 text-white">
            <div class="max-w-2xl">
                <h2 class="text-3xl font-bold mb-4">Create your own event</h2>
                <p class="mb-6 text-lg opacity-90">Share your passion, build community, and earn money through events.</p>
                <button class="bg-white text-orange-600 px-8 py-3 rounded-md font-semibold hover:bg-gray-100 transition">
                    Get Started
                </button>
            </div>
        </div>
    </section>
{% endblock %}