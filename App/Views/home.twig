{% extends "base.twig" %}

{% block title %}Discover Epic Events | EventHub{% endblock %}

{% block content %}
    {# Announcement Banner with Gradient Animation #}
    <div class="relative overflow-hidden bg-gradient-to-r from-violet-600 via-fuchsia-600 to-orange-600 background-animate">
        <div class="absolute inset-0 bg-grid-white/15 bg-grid-pattern"></div>
        <div class="container mx-auto px-4 py-3 text-center relative">
            <p class="text-white font-medium tracking-wide">
                <span class="animate-pulse bg-white/20 px-2 py-1 rounded">Limited Time</span>
                <span class="mx-2">Save 30% on Premium Events</span>
                <code class="font-mono bg-white/90 text-fuchsia-600 px-3 py-1 rounded-full text-sm font-bold ml-2">PREMIUM30</code>
            </p>
        </div>
    </div>

    {# Hero Section with Dynamic Background #}
    <header class="relative min-h-[85vh] flex items-center">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-br from-gray-900/90 via-gray-900/70 to-transparent z-10"></div>
            <video autoplay loop muted class="w-full h-full object-cover">
                <source src="/Assets/hero_video.mp4" type="video/mp4">
            </video>
        </div>

        <div class="container mx-auto px-4 relative z-20">
            <div class="max-w-5xl mx-auto text-center">
                <h1 class="text-5xl md:text-7xl font-black text-white mb-6 leading-tight">
                    Discover
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-fuchsia-400">
                        Extraordinary
                    </span>
                    Experiences
                </h1>
                <p class="text-xl md:text-2xl text-gray-200 mb-10 max-w-3xl mx-auto">
                    Join millions creating unforgettable moments through unique events worldwide
                </p>

                {# Enhanced Search Bar #}
                <div class="max-w-2xl mx-auto backdrop-blur-md bg-white/10 p-2 rounded-2xl shadow-2xl">
                    <div class="flex flex-col md:flex-row gap-2">
                        <div class="flex-grow flex items-center bg-white rounded-xl px-4 py-2">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                            <input type="text" placeholder="Search events..."
                                   class="flex-grow px-3 py-2 bg-transparent focus:outline-none text-gray-800">
                        </div>
                        <div class="flex-shrink-0 flex items-center bg-white rounded-xl px-4 py-2">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            </svg>
                            <input type="text" placeholder="Location"
                                   class="w-24 md:w-32 px-3 py-2 bg-transparent focus:outline-none text-gray-800">
                        </div>
                        <button class="flex-shrink-0 bg-gradient-to-r from-violet-600 to-fuchsia-600 hover:from-violet-700 hover:to-fuchsia-700 text-white font-medium px-8 py-4 rounded-xl transition-all duration-300 transform hover:scale-105">
                            Discover Events
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {# Quick Categories with Hover Effects #}
    <div class="bg-white sticky top-0 z-50 shadow-lg backdrop-blur-lg bg-white/90">
        <div class="container mx-auto px-4">
            <div class="flex items-center gap-8 py-4 overflow-x-auto scrollbar-hide">
                {% for category in ['üî• Trending', 'üéµ Music', 'üé® Arts', 'üèÉ‚Äç‚ôÇÔ∏è Sports', 'üíª Tech', 'üç∑ Food & Drink', 'üé≠ Theater', 'üìö Education'] %}
                    <a href="#" class="flex-shrink-0 group">
                        <div class="px-4 py-2 rounded-full transition-all duration-300
                                  hover:bg-gradient-to-r hover:from-violet-500/10 hover:to-fuchsia-500/10
                                  text-gray-600 hover:text-gray-900">
                            <span class="text-sm font-medium">{{ category }}</span>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Featured Events Grid #}
    <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-end mb-12">
                <div>
                    <h2 class="text-4xl font-bold text-gray-900 mb-4">Featured Events</h2>
                    <p class="text-gray-600 text-lg">Curated experiences you can't miss</p>
                </div>
                <a href="#" class="group flex items-center gap-2 text-violet-600 font-medium">
                    View all
                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                {% for i in 1..8 %}
                    <article class="group relative bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500">
                        <div class="relative aspect-[4/3] overflow-hidden">
                            <img src="https://source.unsplash.com/800x600/?event,festival"
                                 class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700">
                            <div class="absolute top-4 left-4 flex gap-2">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-violet-500 text-white">Featured</span>
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-orange-500 text-white">Limited</span>
                            </div>
                            <button class="absolute top-4 right-4 p-2 rounded-full bg-white/30 backdrop-blur-md hover:bg-white/50 transition-colors">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                                </svg>
                            </button>
                        </div>

                        <div class="p-6">
                            <div class="flex items-center gap-4 mb-4">
                                <div class="flex items-center gap-2 text-violet-600">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    <span class="text-sm font-medium">Mar 15, 2024</span>
                                </div>
                                <div class="flex items-center gap-2 text-gray-500">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    <span class="text-sm">7:00 PM</span>
                                </div>
                            </div>

                            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-violet-600 transition-colors">
                                Summer Music Festival 2024
                            </h3>

                            <p class="text-gray-600 mb-4 line-clamp-2">
                                Experience an unforgettable night of music under the stars with world-class artists.
                            </p>

                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <div class="flex -space-x-3">
                                        {% for j in 1..3 %}
                                            <img class="w-8 h-8 rounded-full border-2 border-white"
                                                 src="https://source.unsplash.com/50x50/?person" alt="Attendee">
                                        {% endfor %}
                                    </div>
                                    <span class="text-sm text-gray-500">+3.2k going</span>
                                </div>
                                <div class="text-right">
                                    <span class="block text-sm text-gray-500">from</span>
                                    <span class="text-lg font-bold text-gray-900">¬£85.00</span>
                                </div>
                            </div>
                        </div>

                        <a href="#" class="absolute inset-0 z-10" aria-label="View event details"></a>
                    </article>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Categories Section with 3D Cards #}
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Browse Categories</h2>
            <p class="text-gray-600 text-lg mb-12">Find events that match your interests</p>

            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% set categories = [
                    {'name': 'Music Festivals', 'icon': 'üéµ', 'image': 'festival', 'count': '2.5k events'},
                    {'name': 'Food & Wine', 'icon': 'üç∑', 'image': 'food', 'count': '1.8k events'},
                    {'name': 'Art Galleries', 'icon': 'üé®', 'image': 'art', 'count': '950 events'},
                    {'name': 'Tech Conferences', 'icon': 'üíª', 'image': 'technology', 'count': '1.2k events'},
                    {'name': 'Sports', 'icon': '‚öΩ', 'image': 'sports', 'count': '3.1k events'},
                    {'name': 'Theater', 'icon': 'üé≠', 'image': 'theater', 'count': '750 events'},
                    {'name': 'Wellness', 'icon': 'üßò', 'image': 'wellness', 'count': '1.5k events'},
                    {'name': 'Business', 'icon': 'üíº', 'image': 'business', 'count': '2k events'}
                ] %}

                {% for category in categories %}
                    <a href="#" class="group perspective">
                        <div class="relative h-64 rounded-2xl overflow-hidden transform-gpu transition-all duration-500 group-hover:rotate-x-12 group-hover:scale-105">
                            <img src="https://source.unsplash.com/600x400/?{{ category.image }}"
                                 class="w-full h-full object-cover">
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/50 to-transparent">
                                <div class="absolute bottom-0 left-0 p-6">
                                    <span class="text-3xl mb-2 block">{{ category.icon }}</span>
                                    <h3 class="text-xl font-bold text-white mb-1">{{ category.name }}</h3>
                                    <p class="text-gray-300 text-sm">{{ category.count }}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Organizer CTA Section -->
    <section class="container mx-auto py-16 px-4">
        <div class="bg-gradient-to-r from-orange-500 to-pink-500 rounded-xl p-8 md:p-12 text-white shadow-lg">
            <div class="max-w-2xl">
                <h2 class="text-3xl font-bold mb-4">Create your own event</h2>
                <p class="mb-6 text-lg opacity-90">Share your passion, build community, and earn money through unforgettable experiences.</p>
                <button class="bg-white text-orange-500 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300 shadow-md">
                    Get Started
                </button>
            </div>
        </div>
    </section>
{% endblock %}

