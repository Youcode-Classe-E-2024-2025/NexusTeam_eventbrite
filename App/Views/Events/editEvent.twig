{# Views/Events/editEvent.twig #}
{% extends "base.twig" %}

{% block title %}Update Event{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-md text-black">
        <h2 class="text-2xl font-bold mb-4">Update Event</h2>

        <form action="/event/{{ event.id }}" method="POST" enctype="multipart/form-data" class="space-y-4">
            <input type="hidden" name="_method" value="PUT">  {# This is for PUT method override #}

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="title">
                    Title
                </label>
                <input type="text" id="title" name="title" value="{{ event.title }}" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="description">
                    Description
                </label>
                <textarea id="description" name="description" rows="4" required
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">{{ event.description }}</textarea>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="start_date">
                        Start Date
                    </label>
                    <input type="datetime-local" id="start_date" name="start_date" value="{{ event.start_date|date('Y-m-d\TH:i') }}" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="end_date">
                        End Date
                    </label>
                    <input type="datetime-local" id="end_date" name="end_date" value="{{ event.end_date|date('Y-m-d\TH:i') }}" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="location">
                    Location
                </label>
                <input type="text" id="location" name="location" value="{{ event.location }}" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="price">
                        Price
                    </label>
                    <input type="number" id="price" name="price" step="0.01" value="{{ event.price }}" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="max_capacity">
                        Maximum Capacity
                    </label>
                    <input type="number" id="max_capacity" name="max_capacity" value="{{ event.max_capacity }}" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="image">
                    Promotional Image (Leave empty to keep existing)
                </label>
                <input type="file" id="image" name="image" accept="image/*"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="category_id">
                    Category
                </label>
                <select id="category_id" name="category_id" required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="1" {% if event.category_id == 1 %}selected{% endif %}>Category 1</option>
                    <option value="2" {% if event.category_id == 2 %}selected{% endif %}>Category 2</option>
                    <option value="3" {% if event.category_id == 3 %}selected{% endif %}>Category 3</option>
                </select>
            </div>

            <input type="hidden" name="organizer_id" value="{{ event.organizer_id }}">

            <div class="mt-6">
                <button type="submit"
                        class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Update Event
                </button>
            </div>
        </form>
    </div>
{% endblock %}
