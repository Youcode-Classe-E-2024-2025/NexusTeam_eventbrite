{% extends "base.twig" %}

{% block title %}Events{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-100 mb-8">Events</h1>

        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            {% if events is empty %}
                <div class="col-span-full flex flex-col items-center justify-center p-12 bg-gray-800/50 rounded-xl">
                    <span class="text-6xl text-gray-400 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 2h12a2 2 0 012 2v16a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2z M8 7h8 M8 11h8 M8 15h4" />
                        </svg>
                    </span>
                    <p class="text-lg text-gray-400">No events have been added yet.</p>
                </div>
            {% endif %}

            {% for event in events %}
                <div class="group relative bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:scale-105">
                    <!-- Image Container -->
                    <div class="relative h-48 overflow-hidden">
                        <img
                                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                                src="{{ event.getPromotionalImage() }}"
                                alt="{{ event.getTitle() }}"
                        >
                        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent"></div>

                        <!-- Price Badge -->
                        <div class="absolute top-4 right-4 px-3 py-1 bg-emerald-500 text-white text-sm font-semibold rounded-full">
                            {{ event.getPrice() > 0 ? event.getPrice()|number_format(2) ~ ' USD' : 'Free' }}
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-6">
                        <!-- Category -->
                        <div class="flex items-center gap-2 mb-4 text-xs text-white bg-amber-300/20 border border-yellow-600 w-fit px-2 py-1 rounded-full">
                            {{ event.getCategory().getName() }}
                        </div>


                        <h2 class="text-xl font-bold text-gray-100 mb-2 line-clamp-2">
                            {{ event.getTitle() }}
                        </h2>

                        <p class="text-gray-400 mb-4 line-clamp-2">
                            {{ event.getDescription() }}
                        </p>

                        <!-- Event Details -->
                        <div class="space-y-3 mb-6">
                            <!-- Location -->
                            <div class="flex items-center text-gray-400">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                <span class="text-sm truncate">{{ event.getLocation() }}</span>
                            </div>

                            <!-- Date -->
                            <div class="flex items-center text-gray-400">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                <span class="text-sm">
                                    {{ event.getStartDate()|date('M d, Y') }} - {{ event.getEndDate()|date('M d, Y') }}
                                </span>
                            </div>

                            <!-- Capacity -->
                            <div class="flex items-center text-gray-400">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                                <span class="text-sm">{{ event.getMaxCapacity() }} spots</span>
                            </div>
                        </div>

                        <!-- Action Button -->
                        <a
                                href="/event?id={{ event.getId() }}"
                                class="block w-full px-4 py-2 text-center text-white bg-indigo-600 rounded-lg transition-colors duration-300 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-800"
                        >
                            View Details
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}