{% extends "base.twig" %}

{% block title %}Edit Promo Code{% endblock %}

{% block content %}
    <div class="flex justify-center items-center h-full bg-gray-700 text-gray-200">
        <main class="w-full max-w-2xl p-6">
            <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-semibold mb-6">Edit Promo Code</h2>
                
                <form action="/organizer/PromoCode/update/{{ promocode.id }}" method="POST">
                    <div class="mb-4">
                        <label for="code" class="block text-gray-300 mb-2">Promo Code</label>
                        <input type="text" id="code" name="code" value="{{ promocode.code }}"
                               class="w-full bg-gray-700 text-gray-200 py-2 px-4 rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500">
                    </div>

                    <div class="mb-4">
                        <label for="discount" class="block text-gray-300 mb-2">Discount (%)</label>
                        <input type="number" id="discount" name="discount" value="{{ promocode.discount }}" min="0" max="100"
                               class="w-full bg-gray-700 text-gray-200 py-2 px-4 rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500">
                    </div>

                    <div class="mb-4">
                        <label for="expiration" class="block text-gray-300 mb-2">Expiration Date</label>
                        <input type="datetime-local" id="expiration" name="expiration" value="{{ promocode.expiration }}"
                               class="w-full bg-gray-700 text-gray-200 py-2 px-4 rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500">
                    </div>

                    <div class="mb-4">
                        <label for="event_id" class="block text-gray-300 mb-2">Event</label>
                        <select id="event_id" name="event_id"
                                class="w-full bg-gray-700 text-gray-200 py-2 px-4 rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500">
                            <option value="" {% if promocode.event_id is not defined or promocode.event_id == null %}selected{% endif %}>None</option>
                            {% for event in events %}
                                <option value="{{ event.id }}" {% if promocode.event_id == event.id %}selected{% endif %}>{{ event.title }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="flex justify-end space-x-4">
                        <a href="/organizer/PromoCode" class="bg-gray-600 hover:bg-gray-500 text-white py-2 px-4 rounded-lg transition duration-200">
                            Cancel
                        </a>
                        <button type="submit" class="bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-lg transition duration-200">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
{% endblock %}
